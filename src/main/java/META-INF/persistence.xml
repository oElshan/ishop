<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>isha.ishop.entity.Account</class>
        <class>isha.ishop.entity.Subcategory</class>
        <class>isha.ishop.entity.ClientOrder</class>
        <class>isha.ishop.entity.OrderItem</class>
        <class>isha.ishop.entity.Producer</class>
        <class>isha.ishop.entity.Product</class>
        <class>isha.ishop.entity.Role</class>
        <class>isha.ishop.entity.Category</class>
        <class>isha.ishop.entity.Client</class>
        <class>isha.ishop.entity.Status</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/ishop"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
